generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  avatar    String   @default("https://i.postimg.cc/nhw9bdGX/5abd985735a8fd4adcb0e795de6a1005.jpg")
  bio       String?
  role      Role     @default(BLOGGER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  DEVELOPER    @map("Developer")
  PHOTOGRAPHER @map("Photographer")
  DESIGNER     @map("Designer")
  BLOGGER      @map("Blogger")
  EDITOR       @map("Editor")
  CONTENTMAKER @map("ContentMaker")
  MARKETER     @map("Marketer")
  MANAGER      @map("Manager")
}
