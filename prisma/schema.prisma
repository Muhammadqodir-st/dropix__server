generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  avatar    String   @default("https://i.postimg.cc/nhw9bdGX/5abd985735a8fd4adcb0e795de6a1005.jpg")
  bio       String?
  role      Role     @default(DEVELOPER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  DEVELOPER
  PHOTOGRAPHER
  DESIGNER
  BLOGGER
  EDITOR
  CONTENTMAKER
  MARKETER
  MANAGER
}
